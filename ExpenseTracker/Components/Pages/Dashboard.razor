@page "/Dashboard"
@using System.Text.Json
@using DataModel.Model
@inject NavigationManager Nav
@inject TransactionService TransactionService
@inject DebtService DebtService
@using MudBlazor
@using MudBlazor.Components

<style>
    /* Dashboard Container */
    .dashboard-container {
        display: grid;
        grid-template-areas:
            "header header"
            "balance flow-summary"
            "chart summary"
            "transactions transactions";
        grid-template-columns: 1fr 2fr;
        gap: 15px;
        padding: 20px;
        background-color: #f9fafe;
    }

    /* Header Buttons */
    .header-buttons {
        grid-area: header;
        display: flex;
        justify-content: flex-end; /* Move to the right */
        gap: 8px;
    }

    .btn {
        font-size: 12px;
        padding: 6px 12px;
        border-radius: 6px;
        background-color: #3498db;
        color: white;
        transition: 0.3s;
    }

    .btn:hover {
        background-color: #2980b9;
        transform: scale(1.05);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    /* Total Balance Section */
    .balance-box {
        grid-area: balance;
        background-color: #ffffff;
        padding: 12px;
        border-radius: 6px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
        font-size: 14px;
    }

    .balance-box h4 {
        font-size: 1rem;
        margin-bottom: 8px;
    }

    .balance-box p {
        font-size: 1.2rem;
        font-weight: bold;
    }

    /* Flow and Summary Section */
    .flow-summary {
        grid-area: flow-summary;
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 8px;
    }

    .small-box {
        background-color: #ffffff;
        padding: 12px;
        border-radius: 6px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
        font-size: 12px;
    }

    .small-box h4 {
        font-size: 0.8rem;
        margin-bottom: 4px;
    }

    .small-box p {
        font-size: 1rem;
        font-weight: bold;
    }

    .small-box .danger {
        color: #dc3545;
    }

    /* Chart Section */
    .chart-section {
        grid-area: chart;
        background-color: #ffffff;
        padding: 12px;
        border-radius: 6px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }

    /* Dashboard Summary Section */
    .dashboard-summary {
        grid-area: summary;
        background-color: #ffffff;
        padding: 12px;
        border-radius: 6px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }

    .dashboard-summary h3 {
        font-size: 1rem;
        margin-bottom: 16px;
        text-align: center;
    }

    .summary-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 8px;
    }

    .small-box {
        background-color: #ffffff;
        padding: 12px;
        border-radius: 6px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
        font-size: 12px;
        transition: 0.3s ease;
    }

    .small-box h4 {
        font-size: 0.9rem;
        margin-bottom: 8px;
    }

    .small-box p {
        font-size: 1rem;
        font-weight: bold;
        color: #333;
    }

    .small-box:hover {
        background-color: #f9f9f9;
        transform: scale(1.03);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    /* Transactions Section */
    .transactions {
        grid-area: transactions;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
        align-items: start;
    }

    .detail-box {
        background-color: #ffffff;
        padding: 8px;
        border-radius: 6px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        font-size: 10px;
        height: auto;
        overflow-y: auto;
    }

    .detail-box h4 {
        font-size: 0.9rem;
        margin-bottom: 5px;
    }

    .detail-box p {
        font-size: 0.8rem;
        margin: 4px 0;
    }
</style>



<div class="dashboard-container">
    <!-- Header Buttons -->
    <div class="header-buttons">
        <button class="btn" @onclick="GoToAddTransaction">Add Transaction</button>
        <button class="btn" @onclick="GoToHistory">History</button>
        <button class="btn" @onclick="NavigateToPendingDebts">Pending Debts</button>
        <button class="btn" @onclick="Logout">Log Out</button>
    </div>

    <!-- Total Balance -->
    <div class="balance-box">
        <h4>Total Balance</h4>
        <p>Rs. @currentBalance</p>
    </div>

    <!-- Flow and Summary Section -->
    <div class="flow-summary">
        <div class="small-box">
            <h4>Cash Flow In</h4>
            <p>Rs. @CashFlowIn</p>
        </div>
        <div class="small-box">
            <h4>Cash Flow Out</h4>
            <p class="danger">Rs. @CashFlowOut</p>
        </div>
        <div class="small-box">
            <h4>Remaining Debts</h4>
            <p>Rs. @RemainingDebts</p>
        </div>
        <div class="small-box">
            <h4>Cleared Debts</h4>
            <p>Rs. @ClearedDebts</p>
        </div>
    </div>

    <!-- Chart Section -->
    <div class="chart-section">
        <MudText Typo="Typo.h6">Financial Summary</MudText>
        <MudChart ChartType="ChartType.Pie" Data="PieChartData" Height="200px" />
    </div>

    <!-- Dashboard Summary -->
    <div class="dashboard-summary">
    <h3>Transaction Summary</h3>
    <div class="summary-grid">
        <div class="small-box">
            <h4>Highest Inflow (Credit)</h4>
            <p>@(HighestInflow != null ? $"Rs. {HighestInflow.Amount}" : "No data")</p>
        </div>
        <div class="small-box">
            <h4>Lowest Inflow (Credit)</h4>
            <p>@(LowestInflow != null ? $"Rs. {LowestInflow.Amount}" : "No data")</p>
        </div>
        <div class="small-box">
            <h4>Highest Outflow (Debit)</h4>
            <p>@(HighestOutflow != null ? $"Rs. {HighestOutflow.Amount}" : "No data")</p>
        </div>
        <div class="small-box">
            <h4>Lowest Outflow (Debit)</h4>
            <p>@(LowestOutflow != null ? $"Rs. {LowestOutflow.Amount}" : "No data")</p>
        </div>
        <div class="small-box">
            <h4>Highest Debt</h4>
            <p>@(HighestDebt != null ? $"Rs. {HighestDebt.DebtAmount}" : "No data")</p>
        </div>
        <div class="small-box">
            <h4>Lowest Debt</h4>
            <p>@(LowestDebt != null ? $"Rs. {LowestDebt.DebtAmount}" : "No data")</p>
        </div>
    </div>
</div>

    <!-- Transactions Section -->
    <div class="transactions">
        <div class="detail-box">
            <h4>Recent Transactions</h4>
            @foreach (var transaction in Transactions)
            {
                    <div>
                        <p><strong>Type:</strong> @transaction.Type</p>
                        <p><strong>Amount:</strong> Rs. @transaction.Amount</p>
                        <p><strong>Date:</strong> @transaction.TransactionDate.ToString("yyyy/MM/dd")</p>
                    </div>
                    <hr />
            }
        </div>
        
        <div class="detail-box">
            <h4>Pending Debts</h4>
            @foreach (var debt in GetTopPendingDebts())
            {
                    <div>
                        <p><strong>Amount:</strong> Rs. @debt.DebtAmount</p>
                        <p><strong>Source:</strong> @debt.DebtSource</p>
                        <p><strong>Due Date:</strong> @debt.DueDate.ToString("yyyy/MM/dd")</p>
                    </div>
                    <hr />
            }
        </div>
    </div>
</div>
