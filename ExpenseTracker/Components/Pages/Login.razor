@page "/login"

<div class="login-container d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow-lg" style="width: 100%; max-width: 400px; border-radius: 15px;">
        <div class="text-center mb-4">
            <h1 class="h4 fw-bold">Welcome</h1>
        </div>

        <form @onsubmit="HandleLogin">
            <!-- Username Input -->
            <div class="form-floating mb-3">
                <input type="text" class="form-control rounded-pill" @bind="Users.UserName" placeholder="Username" />
                <label for="floatingInput">Username</label>
            </div>

            <!-- Password Input -->
            <div class="form-floating mb-3">
                <input type="password" class="form-control rounded-pill" @bind="Users.Password" placeholder="Password" />
                <label for="floatingPassword">Password</label>
            </div>

            <!-- Currency Selector -->
<div class="form-floating mb-3">
    <select class="form-select rounded-pill" @bind="Users.Currency" id="currencySelector">
        <option value="" disabled selected hidden>Currency</option>
                    @foreach (var currency in Enum.GetValues(typeof(DataModel.Common.Base.Currency)))
                    {
                <option value="@currency">@currency.ToString().Replace("_", " ")</option>
                    }
    </select>
    <label for="currencySelector">Currency</label>
</div>

            <!-- Error Message -->
            @if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <div class="alert alert-danger text-center" role="alert">
                    @ErrorMessage
                </div>
            }

            <!-- Login Button -->
            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg rounded-pill">
                    Login
                </button>
            </div>
        </form>


    </div>
</div>